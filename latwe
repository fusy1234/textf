int ileSpacji(string a) {
    int s = 0;
    for (int i = 0; i < a.length(); i++) {
        if (a[i] == ' ') {
            s++;
        }
    }
    return s;
}

string zamienI(string a) {
    for (int i = 0; i < a.length(); i++) {
        if (a[i] == 'i') {
            a[i] = '&';
        }
    }
    return a;
}
